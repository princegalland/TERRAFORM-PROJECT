pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/princegalland/TERRAFORM-PROJECT.git'
            }
        }

        stage('Terraform Init') {
            steps {
                sh 'terraform init'
            }
        }

        stage('Terraform Plan') {
            steps {
                sh 'terraform plan -out=tfplan'
            }
        }

        stage('Terraform Validate') {
            steps {
                sh 'terraform validate'
            }
        }

        stage('Terraform Apply') {
            steps {
                sh 'terraform apply -auto-approve tfplan'
            }
        }
stage('Empty S3 Bucket') {
            steps {
                script {
                    // Define the bucket name here
                    def bucketName = "clinton12"
                    
                    // Run the AWS CLI command to empty the bucket
                    sh "aws s3 rm s3://${bucketName} --recursive"
                }
            }
        }
        stage('Terraform Destroy') {
            steps {
                sh 'terraform destroy -auto-approve'
            }
        }
    }
}
